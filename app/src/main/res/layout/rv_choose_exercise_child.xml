<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/choose_ex_fragment_list_item_height"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <TextView
        android:id="@+id/tv_child_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/choose_ex_fragment_list_item_context_height"
        android:textSize="@dimen/context_text_size"
        android:textColor="@android:color/black"
        android:alpha="@dimen/alpha"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginStart="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginEnd="@dimen/margin_left_right"
        android:gravity="center_vertical"/>

    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider"
        android:visibility="invisible"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"/>

</FrameLayout>