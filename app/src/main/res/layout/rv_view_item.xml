<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_workout_fragment_list_item_height"
    android:gravity="center_vertical">

    <View
        android:id="@+id/top_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider"
        android:visibility="invisible"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_workout_fragment_list_item_context_height"
        android:textColor="@android:color/black"
        android:textSize="@dimen/context_text_size"
        android:gravity="center_vertical"
        android:alpha="@dimen/alpha"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginStart="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginEnd="@dimen/margin_left_right"/>

</RelativeLayout>