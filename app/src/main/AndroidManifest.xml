<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sergeyloginov.sharpperfection">
    <application
        android:name=".utils.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.MULTIWINDOW_LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".controller.ChooseExerciseActivity"/>
        <activity android:name=".controller.StartExerciseActivity"/>
        <activity android:name=".controller.ViewWorkoutActivity"/>
        <activity android:name=".auth.LoginActivity"/>
        <activity android:name=".auth.SignUpActivity"/>
        <activity android:name=".controller.FiltersActivity"/>
        <uses-library android:required="false" android:name="com.sec.android.app.multiwindow"/>
        <meta-data android:name="com.sec.android.support.multiwindow" android:value="true"/>
    </application>
</manifest>